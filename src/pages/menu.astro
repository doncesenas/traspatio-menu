        <!--  Script simple para cambiar secciones -->
        <script>
            const tabs = document.querySelectorAll(".tab-item");
            const sections = document.querySelectorAll(".menu-section");

            tabs.forEach((tab) => {
                tab.addEventListener("click", () => {
                    // Quitar clase activa a todos
                    tabs.forEach((t) =>
                        t.classList.remove(
                            "text-[#79B743]",
                            "border-[#79B743]",
                            "active",
                        ),
                    );
                    // Agregar clase activa al actual
                    tab.classList.add(
                        "text-[#79B743]",
                        "border-[#79B743]",
                        "active",
                    );

                    // @ts-ignore
                    const selected = tab.dataset.section;

                    sections.forEach((section) => {
                        if (
                            selected === "todo" ||
                            // @ts-ignore
                            section.dataset.category === selected
                        ) {
                            section.classList.remove("hidden", "opacity-0");
                            section.classList.add("opacity-100");
                        } else {
                            section.classList.add("hidden", "opacity-0");
                            section.classList.remove("opacity-100");
                        }
                    });
                });
            });
        </script>
    </section>
</BaseLayout>
