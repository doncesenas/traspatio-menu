            src="/logo.jpg"
            alt="Logo Traspatio Mar & Grill"
            class="w-32 h-32 mx-auto rounded-full object-cover shadow-md mb-6"
        />
        <h1 class="text-4xl font-bold text-center text-[#79B743] mb-10">
            Nuestro Menú
        </h1>

        <!-- Sections -->
        <div
            id="menu-tabs"
            class="flex justify-center flex-wrap gap-6 mb-10 text-lg font-medium text-stone-100"
        >
            <span
                class="tab-item border-b-2 border-transparent hover:text-[#79B743] transition-all duration-300 cursor-pointer active"
                data-section="todo">Todo</span
            >
            <span
                class="tab-item border-b-2 border-transparent hover:text-[#79B743] transition-all duration-300 cursor-pointer"
                data-section="entradas">Entradas</span
            >
            <span
                class="tab-item border-b-2 border-transparent hover:text-[#79B743] transition-all duration-300 cursor-pointer"
                data-section="mariscos">Mariscos</span
            >
            <span
                class="tab-item border-b-2 border-transparent hover:text-[#79B743] transition-all duration-300 cursor-pointer"
                data-section="aguachiles">Aguachiles</span
            >
            <span
                class="tab-item border-b-2 border-transparent hover:text-[#79B743] transition-all duration-300 cursor-pointer"
                data-section="parrilladas">Parrilladas</span
